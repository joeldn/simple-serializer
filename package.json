{
  "name": "simple-serializer",
  "version": "0.1.2",
  "description": "A simple serialization library for classes, written in Typescript",
  "main": "lib/index",
  "typings": "lib/index",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "tsc -p tsconfig.compile.json",
    "prepublish": "npm run clean && npm run compile",
    "test": "nyc mocha --reporter spec --full-trace 'test/index.ts' && npm run lint",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "tslint --type-check --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeldn/simple-serializer.git"
  },
  "keywords": [
    "serialization",
    "serialize",
    "json",
    "classes",
    "decorator",
    "typscript",
    "es7",
    "es2016"
  ],
  "author": "J. de Nes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joeldn/simple-serializer/issues"
  },
  "homepage": "https://github.com/joeldn/simple-serializer#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.10"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/core-js": "^0.9.41",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/reflect-metadata": "0.0.5",
    "chai": "^3.5.0",
    "codecov": "^2.2.0",
    "mocha": "^3.4.1",
    "nyc": "^10.3.2",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
