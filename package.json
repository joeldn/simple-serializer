{
  "name": "simple-serializer",
  "version": "0.2.2",
  "description": "A simple serialization library for classes, written in Typescript",
  "main": "lib/index",
  "typings": "lib/index",
  "scripts": {
    "clean": "rm -rf lib",
    "compile": "tsc -p tsconfig.compile.json",
    "prepublish": "npm run clean && npm run compile",
    "test": "nyc mocha --reporter spec --full-trace 'test/index.ts' && npm run lint",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeldn/simple-serializer.git"
  },
  "keywords": [
    "serialization",
    "serialize",
    "json",
    "classes",
    "decorator",
    "typescript",
    "es7",
    "es2016"
  ],
  "author": "J. de Nes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joeldn/simple-serializer/issues"
  },
  "homepage": "https://github.com/joeldn/simple-serializer#readme",
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/core-js": "^2.5.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@types/reflect-metadata": "0.0.5",
    "chai": "^4.3.4",
    "codecov": "^3.8.3",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "ts-node": "^10.4.0",
    "tslint": "^5.20.1",
    "typescript": "^4.5.4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
