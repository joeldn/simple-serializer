{
  "compilerOptions": {
    "outDir": "lib",
    "lib": ["es7"],
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "compileOnSave": false
}
